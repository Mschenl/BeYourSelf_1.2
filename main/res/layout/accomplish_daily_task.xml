<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_accomplish_daily_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/return_accomplish_daily_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""

            android:textSize="20dp"
            android:text="返回"
            android:onClick="Btn_Click"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/pencil"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="完成任务" />

    </LinearLayout>

    <!--完成环节的菜单界面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imb_home_segment_accomplish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/magic"
                android:onClick="Btn_Click"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="环节"
                android:textSize="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imb_finish_segment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/magic"
                android:onClick="Btn_Click"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:paddingLeft="15dp"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_accomplish_daily_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>
