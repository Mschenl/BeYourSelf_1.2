<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/return_check_daily_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="20dp"
            android:onClick="Button_click"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <Button
                android:id="@+id/btn_top_title_check_daily_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前时间"
                android:textSize="25dp"
                android:layout_marginLeft="25dp"
                android:onClick="Button_click"
                android:background="#04ff64"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击变更"
                android:textSize="10dp"
                android:layout_marginLeft="40dp"
                />


        </LinearLayout>


        <Button
            android:id="@+id/add_daily_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="Button_click"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listview_daily_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/refresh_check_daily_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新"
            android:textSize="20dp"
            android:onClick="Button_click"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/clear_daily_task_added"
            android:text="清除所有计划"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:onClick="Button_click"
            android:layout_weight="1"
            />


    </LinearLayout>
</LinearLayout>
