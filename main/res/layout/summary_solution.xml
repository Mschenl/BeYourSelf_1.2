<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--导航界面-->
    <GridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:columnWidth="80dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

    </GridView>


        <LinearLayout
            android:id="@+id/show_chart_layout_summmary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/gv"
            android:layout_above="@id/LinearButton">
            >

        </LinearLayout>
    <!--</ScrollView>-->

    <LinearLayout
        android:id="@+id/LinearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/bt_showData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_main"
            android:background="#FFFFFF"
            android:onClick="ChangeView"/>

        <ImageButton
            android:id="@+id/bt_addTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/calender"
            android:background="#FFFFFF"
            android:onClick="ChangeView"/>

        <ImageButton
            android:id="@+id/bt_summaryAndSolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/books"
            android:background="#c8cab6"
            android:onClick="ChangeView"
            />
        <ImageButton
            android:id="@+id/bt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/tools"
            android:background="#FFFFFF"
            android:onClick="ChangeView"/>

    </LinearLayout>


</RelativeLayout>
